programa {
  funcao inicio() {
    // exemplo de escolha-caso

    inteiro numero 
    escreva (" digite um número de 1 a 3: ")
    leia (numero)
    escolha (numero)
  {
    caso 1:
    escreva (" você escolheu a opção 1 :) ")
    pare

    caso 2: 
    escreva ("você escolheu a opção 2 :D ")
    pare 

    caso 3:
    escreva ("você escolheu a opção 3 :^ ")
    pare

    caso contrario :
    escreva ("você não escolheu uma opção válida :( ")

  }

  }
}
